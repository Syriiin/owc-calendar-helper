<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OWC Calendar Helper</title>
    <link rel="icon" type="image/x-icon" href="static/favicon.ico" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <script>
        const flavourTextOptions = [
            "It's coming home!",
            "Not again...",
            "Click the circles!",
            "Let's go!",
            "727",
            "WYSI",
        ];
        function setFlavourText() {
            const chosenFlavourText =
                flavourTextOptions[
                Math.floor(Math.random() * flavourTextOptions.length)
                ];
            document.getElementById("flavour-text").innerText = chosenFlavourText;
        }
        const lastUpdated = new Date("{{ last_updated }}");
        function getTimeAgo(date) {
            const seconds = Math.floor((new Date() - date) / 1000);
            const years = Math.floor(seconds / 31536000);
            if (years > 1) {
                return years + " years ago";
            }
            const months = Math.floor(seconds / 2592000);
            if (months > 1) {
                return months + " months ago";
            }
            const days = Math.floor(seconds / 86400);
            if (days > 1) {
                return days + " days ago";
            }
            const hours = Math.floor(seconds / 3600);
            if (hours > 1) {
                return hours + " hours ago";
            }
            const minutes = Math.floor(seconds / 60);
            if (minutes > 1) {
                return minutes + " minutes ago";
            }
            return Math.floor(seconds) + " seconds ago";
        }
        function setLastUpdated() {
            document.getElementById("last-updated").innerText = getTimeAgo(lastUpdated);
        }

        window.onload = () => {
            setFlavourText();
            setLastUpdated();
            setInterval(() => {
                setLastUpdated();
            }, 1000);
        };
    </script>
</head>

<body class="bg-neutral-100 dark:bg-neutral-900 flex flex-col min-h-screen">
    <header class="py-8 text-center bg-neutral-50 dark:bg-neutral-800">
        <h1
            class="flex flex-row items-center justify-center gap-2 text-3xl font-bold text-gray-900 dark:text-white mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-12">
                <path fill-rule="evenodd"
                    d="M6.75 2.25A.75.75 0 0 1 7.5 3v1.5h9V3A.75.75 0 0 1 18 3v1.5h.75a3 3 0 0 1 3 3v11.25a3 3 0 0 1-3 3H5.25a3 3 0 0 1-3-3V7.5a3 3 0 0 1 3-3H6V3a.75.75 0 0 1 .75-.75Zm13.5 9a1.5 1.5 0 0 0-1.5-1.5H5.25a1.5 1.5 0 0 0-1.5 1.5v7.5a1.5 1.5 0 0 0 1.5 1.5h13.5a1.5 1.5 0 0 0 1.5-1.5v-7.5Z"
                    clip-rule="evenodd" />
            </svg>
            OWC Calendar Helper
        </h1>
        <p id="flavour-text" class="text-l text-gray-700 dark:text-gray-300">
            It's coming home!
        </p>
    </header>
    <main class="flex flex-col gap-4 my-8 sm:max-w-2xl sm:px-4 mx-auto text-neutral-700 dark:text-neutral-300 grow">
        <div class="bg-neutral-50 dark:bg-neutral-800 p-4 sm:rounded-lg">
            <p class="mb-4">
                The calendars below can be imported into your calendar application of
                choice (e.g. Google Calendar, Proton Calendar, etc...).
            </p>
            <p class="mb-4">
                Please note the calendars often get updated throughout the week as
                reschedules occur. Usually the calendars will be finalised by Friday
                at the latest.
            </p>
            <p class="text-sm text-neutral-500 dark:text-neutral-400">
                Last updated: <span id="last-updated"></span>
            </p>
        </div>
        {% for calendar in calendars %}
        <div class="bg-neutral-50 dark:bg-neutral-800 p-4 sm:rounded-lg">
            <h3 class="text-xl font-bold mb-4">
                OWC {{ calendar.year }}
                <span class="text-sm text-neutral-500 dark:text-neutral-400">
                    (<a href="https://osu.ppy.sh/wiki/en/Tournaments/OWC/{{ calendar.year }}"
                        class="underline">Wiki</a>)
                </span>
            </h3>
            <table class="table-auto w-full">
                <tbody>
                    {% for stage in calendar.stages %}
                    <tr>
                        <td class="px-4 py-2 font-bold">{{ stage.stage }}</td>
                        <td class="px-4 py-2 text-right">
                            <a download href="{{ stage.calendar }}"
                                class="inline-flex items-center px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 min-w-max">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3" />
                                </svg>
                                <span class="ml-2 text-sm">Download .ics</span>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% endfor %}
    </main>
    <footer class="py-4 text-center bg-neutral-50 dark:bg-neutral-800">
        <p class="text-gray-700 dark:text-gray-300">
            Made by
            <a href="https://osu.ppy.sh/users/5701575" class="underline">Syrin</a> |
            <a href="https://github.com/Syriiin/owc-calendar-helper" class="text-gray-700 dark:text-gray-300 underline">
                GitHub
            </a>
        </p>
    </footer>
</body>

</html>
